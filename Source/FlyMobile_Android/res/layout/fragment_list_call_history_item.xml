<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

	<RelativeLayout
	    android:id="@+id/lay_edit_call"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:gravity="center_vertical" 
	    android:clickable="true"
	    >
		<ImageView
		    android:id="@+id/img_remove_icon"
		    android:layout_width="15dip"
		    android:layout_height="15dip"
		    android:layout_centerInParent="true"
		    android:src="@drawable/delete_cell"
		    />
		<ImageView
		    android:id="@+id/img_remove_divider"
		    android:layout_width="2dip"
		    android:layout_height="30dip"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:background="@color/grey" 
		    />	    	    
	</RelativeLayout>
	
	<ImageView
	    android:id="@+id/img_contact_icon"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:layout_marginLeft="10dip"
	    android:src="@drawable/contact_icon"
	    />
	<LinearLayout
	    android:id="@+id/lay_call_info"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0" 
	    android:orientation="vertical"	    
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:gravity="center_vertical"
	    >
	    <common.component.ui.MyBKTextView
	        android:id="@+id/txt_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Alvin"
	        android:textColor="@color/app_color" 
	        />
	    <LinearLayout
	        android:id="@+id/lay_call_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical" 
	        >
	        <ImageView
	            android:id="@+id/img_call_state"
	            android:layout_width="20dip"
	            android:layout_height="15dip" 
	            android:src="@drawable/call_state1"
	            />
	        <common.component.ui.MyTextView
		        android:id="@+id/txt_call_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Today, 13:03"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textColor="@color/app_grey_color" 
		        />
	    </LinearLayout>	    
	</LinearLayout>
	
	<LinearLayout 
         android:id="@+id/lay_contact_action"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:gravity="center_vertical"
	     >	    
		 
         <ImageView 
		     android:id="@+id/img_sms_icon"
		     android:layout_width="20dip"
		     android:layout_height="20dip"
		     android:background="@drawable/msg_icon"
		     />
         
         <ImageView 
		     android:id="@+id/img_call_icon"
		     android:layout_width="20dip"
		     android:layout_height="20dip"
		     android:background="@drawable/call_icon"
		     />
	    
	</LinearLayout>
</LinearLayout>