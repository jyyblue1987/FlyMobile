<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	>
	<RelativeLayout
	    android:id="@+id/lay_edit_message"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:gravity="center_vertical" 
	    android:clickable="true"
	    >
		<ImageView
		    android:id="@+id/img_remove_icon"
		    android:layout_width="15dip"
		    android:layout_height="15dip"
		    android:layout_centerInParent="true"
		    android:src="@drawable/delete_cell"
		    />
		<ImageView
		    android:id="@+id/img_remove_divider"
		    android:layout_width="2dip"
		    android:layout_height="30dip"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:background="@color/grey" 
		    />	    	    
	</RelativeLayout>
	
	<ImageView
	    android:id="@+id/img_contact_icon"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:layout_marginLeft="10dip"
	    android:src="@drawable/contact_icon"
	    />
	<LinearLayout
	    android:id="@+id/lay_message_info"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical"	    
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    >
	    <common.component.ui.MyBKTextView
	        android:id="@+id/txt_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Alvin"
	        android:textColor="@color/app_color" 
	        />
	    <LinearLayout
	        android:id="@+id/txt_message_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical" 
	        >
	        <ImageView
	            android:id="@+id/img_sent_flag"
	            android:layout_width="20dip"
	            android:layout_height="15dip" 
	            android:src="@drawable/msg_state1"
	            />
	        <common.component.ui.MyTextView
		        android:id="@+id/txt_content"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="How are you"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textColor="@color/app_color" 
		        />
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>