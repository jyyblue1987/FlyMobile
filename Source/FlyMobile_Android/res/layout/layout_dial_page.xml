<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
	<include android:id="@+id/fragment_header"
		layout="@layout/fragment_header_bar" />	
	<LinearLayout
	    android:id="@+id/lay_total_self_info"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center"
	    android:orientation="horizontal" 
	    >
	    <ImageView
	        android:id="@+id/img_contact_icon"
	        android:layout_width="40dip" 
	        android:layout_height="40dip"
	        android:src="@drawable/contact_icon"
	        />
	    <LinearLayout
	        android:id="@+id/lay_self_info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:layout_marginLeft="15dip"
	        >
	        <common.component.ui.MyTextView
	            android:id="@+id/txt_mobile"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="(015) 510 5155" 
	            />
	        <LinearLayout
	            android:id="@+id/lay_expire"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" 
	            >
	            <common.component.ui.MyTextView
	                android:id="@+id/lbl_expire_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="expired date     :" 
	                android:textColor="@color/app_grey_color"
	                />
	            <common.component.ui.MyTextView
	                android:id="@+id/txt_expire_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="01/05/15" 
	                />
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/lay_credit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" 
	            >
	            <common.component.ui.MyTextView
	                android:id="@+id/lbl_credit_balance"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="credit balance  :" 
	                android:textColor="@color/app_grey_color"
	                />
	            <common.component.ui.MyTextView
	                android:id="@+id/txt_credit_balance"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="MYR 50.00" 
	                />
	            <TextView
	                android:id="@+id/txt_charge_credit"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:layout_marginLeft="5dip"
	                android:text="+"
	                android:textColor="@color/white"
	                android:background="@drawable/charge_credit" 
	                />
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/lay_dial_number"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="20dip" 
	    android:background="#e7e7e8"
	    >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical"        
	        >
	        <Button
	            android:id="@+id/btn_add_contact"
	            android:layout_width="15dip"
	            android:layout_height="15dip"
	            android:background="@drawable/plus"
	            />
	        <common.component.ui.MyTextView
	            android:id="@+id/txt_prefix"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:text="+60"
	            android:textSize="25sp"
	            android:textColor="@color/app_grey_color"
	            />
	        <EditText
	            android:id="@+id/edit_dial_number"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:gravity="center_vertical"
	            android:text="123456789"
	            android:textSize="25sp"
	            />
	        <Button
	            android:id="@+id/btn_del"
	            android:layout_width="22dip"
	            android:layout_height="15dip"
	            android:background="@drawable/del"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical"        
	        >
	        <common.component.ui.MyTextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            />
	        <common.component.ui.MyTextView
	            android:id="@+id/lbl_display_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="displaying as"
	            android:textColor="@color/app_grey_color"
	            />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical"        
	        >
	        <common.component.ui.MyTextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            />
	        <Button
	            android:id="@+id/btn_switch"
	            android:layout_width="15dip"
	            android:layout_height="15dip"
	            android:background="@drawable/refresh"
	            />
	        <common.component.ui.MyTextView
	            android:id="@+id/txt_contact_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:textSize="20sp"	            
	            android:text="019 000 0000"
	            />
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/screen_tab_dialer_linearLayout_keyboard" 
	    android:layout_width="fill_parent" 
	    android:gravity="center_horizontal" 
	    android:orientation="vertical" 
	    android:layout_margin="3px" 
	    android:layout_height="match_parent" 
	    android:weightSum="10" 
	    >
        <LinearLayout android:layout_width="fill_parent" android:layout_weight="2" android:weightSum="6" android:layout_height="fill_parent">
            <include android:id="@+id/screen_tab_dialer_button_1" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_2" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_3" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_weight="2" android:weightSum="6" android:layout_height="fill_parent">
            <include android:id="@+id/screen_tab_dialer_button_4" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_5" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_6" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_weight="2" android:weightSum="6" android:layout_height="fill_parent">
            <include android:id="@+id/screen_tab_dialer_button_7" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_8" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_9" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_weight="2" android:weightSum="6" android:layout_height="fill_parent">
            <include android:id="@+id/screen_tab_dialer_button_star" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_0" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
            <include android:id="@+id/screen_tab_dialer_button_sharp" layout="@layout/view_dialer_button_text" android:layout_weight="2" android:layout_margin="2px" android:layout_height="fill_parent" android:layout_width="fill_parent"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"            
            >
            <Button                
                android:id="@+id/btn_dial"
                android:layout_width="35dip"
                android:layout_height="35dip" 
                android:background="@drawable/call"
                />
            <Button
                android:id="@+id/btn_noti_callback"
                android:layout_width="35dip"
                android:layout_height="35dip" 
                android:layout_marginLeft="30dip"
                android:background="@drawable/noti"
                />
        </LinearLayout>
    </LinearLayout>
	
</LinearLayout>
